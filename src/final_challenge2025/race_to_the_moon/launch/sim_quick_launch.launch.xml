<launch>
  <!-- Silent racecar simulator | saved to ~/.ros/log directory -->
  <include file="$(find-pkg-share racecar_simulator)/launch/simulate.launch.xml">
    <arg name="output" value="log"/>
  </include>

  <!-- Race_to_the_moon.launch.xml -->
  <include file="$(find-pkg-share race_to_the_moon)/launch/race_to_the_moon.launch.xml"/>

  <!-- Silent rosbag | saved to ~/.ros/log directory -->
  <node pkg="ros2bag" exec="play" name="rosbag_player" output="log">
    <param name="bag_path" value="$(var bag_path)"/>
    <param name="loop" value="false"/>
  </node>
</launch>
