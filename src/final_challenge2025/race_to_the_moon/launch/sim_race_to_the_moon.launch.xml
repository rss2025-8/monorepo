<launch>
  <node pkg="race_to_the_moon" name="hough_line_lane_detector" exec="hough_line_lane_detector" output="screen">
    <param from="$(find-pkg-share race_to_the_moon)/config/sim_params.yaml"/>
  </node>

  <node pkg="race_to_the_moon" name="lane_homography_transformer" exec="lane_homography_transformer" output="screen">
    <param from="$(find-pkg-share race_to_the_moon)/config/sim_params.yaml"/>
    <param from="$(find-pkg-share race_to_the_moon)/config/homographies.yaml"/>
  </node>

  <node pkg="race_to_the_moon" name="pure_pursuit" exec="pure_pursuit" output="screen">
    <param from="$(find-pkg-share race_to_the_moon)/config/sim_params.yaml"/>
  </node>
</launch>
